<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.travelplanner">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Travel Planner"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TravelPlanner">

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        
        <activity android:name=".MainActivity" />
        <activity android:name=".UserProfileActivity" />
        <activity android:name=".DestinationsActivity" />
        <activity android:name=".ItineraryActivity" />
        <activity android:name=".RecommendationsActivity" />
        <activity android:name=".SettingsActivity" />

  
        <meta-data
            android:name="android:windowContentTransitions"
            android:value="true" />
    </application>
</manifest>
