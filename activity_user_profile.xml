<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    
    <androidx.constraintlayout.widget.ConstraintLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvFavoriteActivities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Favorite Activities"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnDestinations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel Destinations"
            app:layout_constraintTop_toBottomOf="@id/tvFavoriteActivities"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btnItinerary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Itinerary Planner"
            app:layout_constraintTop_toBottomOf="@id/tvFavoriteActivities"
            app:layout_constraintStart_toEndOf="@id/btnDestinations"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"/>

        <Button
            android:id="@+id/btnRecommendations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommendations"
            app:layout_constraintTop_toBottomOf="@id/btnDestinations"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
